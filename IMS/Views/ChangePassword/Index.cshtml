@{
    ViewData["Title"] = "Change Password";
    Layout = "_Layout";
}
<style>
    .lbltxt-bold {
        font-weight: 900;
    }

    .btn-block {
        width: 100px;
    }
</style>

<div id="content" class="app-content">

    <ol class="breadcrumb float-xl-end">
        <li class="breadcrumb-item"><a href="javascript:;">Home</a></li>
        <li class="breadcrumb-item active">Change Password</li>
    </ol>


    <h1 class="page-header">Change Password<small></small></h1>


    <div class="panel panel-inverse">
        <div class="panel-heading">
            <h4 class="panel-title">Panel Title here</h4>
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
            </div>
        </div>
        <div class="panel-body">
            <!--begin::Form-->
            <form class="form" autocomplete="off">
                <div id="validateDiv">
                    <div class="col-md-12 form-group">
                        <div class="col-md-6">
                            <label for="txtCurrPassword" class="form-label lbltxt-bold">1. Current Password</label>
                            <input type="password" class="form-control form-control-lg col-md-2" id="txtCurrPassword" validate="true" match="^.+$" error="* This Field required!" onkeyup="validateInputs();">
                            <div class="text-danger errorNew"></div>
                        </div>
                    </div>
                    <div class="col-md-12 form-group">
                        <div class="col-md-6">
                            <label for="txtNewPassword" class="form-label lbltxt-bold">2. New Password</label>
                            <input type="password" class="form-control form-control-lg col-md-2" id="txtNewPassword" validate="true" match="^.+$" error="* This Field required!" onkeyup="validateInputs();">
                            <div class="text-danger errorNew"></div>
                        </div>
                    </div>
                    <div class="col-md-12 form-group">
                        <div class="col-md-6">
                            <label for="txtConfirmPassword" class="form-label lbltxt-bold">3. Confirm New Password</label>
                            <input type="password" class="form-control form-control-lg col-md-2" id="txtConfirmPassword" validate="true" match="^.+$" error="* This Field required!" onkeyup="validateInputs();">
                            <div class="text-danger errorNew"></div>
                        </div>
                    </div>
                </div>
                <div class="mb-12" style="margin-top:4%;">
                    <center>
                        <input type="text" class="btn btn-success btn-block" value="Save" readonly id="btnSave">
                        <input type="text" class="btn btn-danger btn-block" value="Cancel" readonly id="btnCancel">
                    </center>
                </div>
            </form>
            <!--end::Form-->
        </div>
    </div>
</div>


@section scripts{

    <script>
        function validateInputs() {
            validate('#validateDiv');
        }

        var checkOldPassword = "@Url.Action("CheckOldPassword", "ChangePassword")";
        var updateNewPassword = "@Url.Action("UpdateNewPassword", "ChangePassword")";

    </script>

    <script src="~/jsPages/ChangePassword.js"></script>
}