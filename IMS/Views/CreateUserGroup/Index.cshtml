@{
    ViewData["Title"] = "Create User Group";
    Layout = "_Layout";
}
<style>

    .bg-info-group {
        background-color: #4285f4 !important;
        color: white !important;
    }
</style>

<div id="content" class="app-content">

    <ol class="breadcrumb float-xl-end">
        <li class="breadcrumb-item"><a href="javascript:;">Home</a></li>
        <li class="breadcrumb-item active">Create User Group</li>
    </ol>


    <h1 class="page-header">Create User Group<small></small></h1>


    <div class="panel panel-inverse">
        <div class="panel-heading">
            <h4 class="panel-title">Panel Title here</h4>
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
            </div>
        </div>
        <div class="panel-body">
            <!--begin::Form-->
            <form class="form" autocomplete="off">
                <div class="col-md-12 form-group row">
                    <div class="col-md-12">
                        <div class="col-md-12" style="margin-bottom: 15px;">
                            @*<input type="text" class="btn btn-warning" value="Create User Group" id="btnCreateUserGroup" readonly>*@
                            <button type="button" class="btn btn-warning" id="btnUserGrp"><span class="fa fa-user"></span>&nbsp;New User Group</button>
                        </div>
                    </div>
                    <div class="col-md-3 row">
                        <div class="col-md-12">
                            <table id="tableUserGroups" class="table table-bordered table-responsive-md text-center">
                                <thead class="thead-dark">
                                    <tr>
                                        <th style="display: none;"></th>
                                        <th align="center">User Groups</th>
                                    </tr>
                                </thead>
                                <tbody id="tbodyUserGroups">
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-9 row">
                        <table class="table table-striped">
                            <thead class="thead-dark" id="tablePermissionMaster">
                                <tr>
                                    <th scope="col" style="display: none;">User Group Permission Serial</th>
                                    <th scope="col" style="display: none;">Permission Serial</th>
                                    <th scope="col">#</th>
                                    <th scope="col">Page Name</th>
                                    <th scope="col">Read Only</th>
                                    <th scope="col">Read & Write Only</th>
                                </tr>
                            </thead>
                            <tbody id="tbodyPermissionMaster">
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3"></div>
                    <div class="col-9"></div>
                </div>
                <div class="mb-12">
                    <center>
                        <input type="text" class="btn btn-danger btn-block" value="Cancel" id="btnCancel" readonly>
                        <input type="text" class="btn btn-success btn-block" value="Save" id="btnSave" readonly>
                    </center>
                </div>

            </form>
            <!--end::Form-->
        </div>
    </div>

    <!-- Create user group modal-->
    <div class="modal fade" id="UserGrpModal">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <h4 class="modal-title">
                            <span class="fa fa-user" style="font-size: 15px;color: #d4694d;"></span>&nbsp;Add new user group
                        </h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true"></button>
                    </div>
                    <div class="modal-body" style="">

                        <div class="col-md-12 form-group">
                            <div class="card">
                                <div class="card-body">
                                    <div class="col-sm-12 col-xs-12" id="validateDiv">
                                        <div class="form-group">
                                            <label for="txtUsergrp">User group name</label>
                                            <input type="text" class="form-control" id="txtUsergrp" validate="true" match="^.+$" error="* This Field required." onkeyup="validateInputs();">
                                            <div class="text-danger errorNew"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="javascript:;" class="btn btn-danger" data-bs-dismiss="modal">Close</a>
                        <button type="button" class="btn btn-success" id="btnUserGrpSave" data-dismiss="modal"><span class="fa fa-floppy"></span>&nbsp;Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script>
        var loadUserGroups = "@Url.Action("LoadUserGroups", "CreateUserGroup")";
        var loadPermissions = "@Url.Action("LoadPermissions", "CreateUserGroup")";
        var loadUserGroupPermissions = "@Url.Action("LoadUserGroupPermissions", "CreateUserGroup")";
        var saveUserGroupPermissions = "@Url.Action("SaveUserGroupPermissions", "CreateUserGroup")";
        var saveUserGroups = "@Url.Action("SaveUserGroups", "CreateUserGroup")";

        function validateInputs() {
            validate('#validateDiv');
        }
    </script>

    <script src="~/jsPages/CreateUserGroups.js"></script>

}
