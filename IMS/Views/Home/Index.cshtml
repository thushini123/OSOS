    ViewData["Title"] = "Home";

}

<style>
    .text-center {
        vertical-align: middle;
    }

    .bg-info-new {
        background-color: #76f36e;
    }

    .hideCol {
        display: none;
    }

    .custome-left {
        text-align: left;
    }

    .custome-right {
        text-align: right;
